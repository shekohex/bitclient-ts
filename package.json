{
  "name": "bitclient-ts",
  "version": "0.1.0",
  "description": "Strongly Typed Bitcoin JSON RPC Client for Nodejs",
  "main": "index.js",
  "scripts": {
    "generate": "ts-node ./src/generate-client.ts && prettier --write \"src/**/*.ts\"",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shekohex/bitclient-ts.git"
  },
  "keywords": [
    "bitcoin",
    "rpc",
    "json-rpc",
    "wallet",
    "types",
    "ts",
    "crypto"
  ],
  "author": "Shady Khalifa <shekohex@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shekohex/bitclient-ts/issues"
  },
  "homepage": "https://github.com/shekohex/bitclient-ts#readme",
  "dependencies": {
    "jsonrpc-ts": "^0.1.0",
    "typescript": "^3.1.1"
  },
  "devDependencies": {
    "@types/jest": "^23.3.3",
    "@types/node": "^10.11.4",
    "fast-glob": "^2.2.3",
    "jest": "^29.3.1",
    "json-merger": "^1.0.1",
    "json-to-ts": "^1.5.4",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.3",
    "ts-jest": "^23.10.3",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.10.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
